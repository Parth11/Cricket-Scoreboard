            </Button>
            <Button fx:id="btnFourRuns" alignment="CENTER" contentDisplay="CENTER" layoutX="203.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="4">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
            <Button fx:id="btnFiveRuns" alignment="CENTER" contentDisplay="CENTER" layoutX="268.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="5">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
            <Button fx:id="btnSixRuns" alignment="CENTER" contentDisplay="CENTER" layoutX="333.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="6">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
            <Button fx:id="btnSevenRuns" alignment="CENTER" contentDisplay="CENTER" layoutX="398.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="7">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
            <Button fx:id="btnUndo" alignment="CENTER" contentDisplay="CENTER" layoutX="463.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="50.0" text="Undo">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutY="100.0" prefHeight="100.0" prefWidth="650.0" spacing="20.0">
         <children>
            <Label alignment="CENTER" prefWidth="80.0" text="Overs:">
               <font>
                  <Font name="Chalkboard SE Light" size="18.0" />
               </font>
            </Label>
            <Button fx:id="btnIncrementOneBall" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#incrementRuns" text="+1 Ball">
