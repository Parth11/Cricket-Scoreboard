   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="650.0" spacing="20.0">
         <children>
            <Label alignment="CENTER" prefWidth="80.0" text="Runs:">
               <font>
                  <Font name="Chalkboard SE Light" size="18.0" />
               </font>
            </Label>
            <Button fx:id="btnOneRun" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="1">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
            <Button fx:id="btnTwoRuns" alignment="CENTER" contentDisplay="CENTER" layoutX="73.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="2">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
               </font>
            </Button>
            <Button fx:id="btnThreeRuns" alignment="CENTER" contentDisplay="CENTER" layoutX="138.0" layoutY="38.0" mnemonicParsing="false" onAction="#incrementRuns" prefHeight="45.0" prefWidth="45.0" text="3">
               <font>
                  <Font name="Chalkboard SE Light" size="13.0" />
